<%- include('navigation') -%>
    <main class="mdl-layout__content">
      <!-- Image card -->
<style>
    .demo-card-image.mdl-card {
      width: 256px;
      height: 256px;
      background: url('/photos_appart1.jpg') center / cover;
    }
    .demo-card-image > .mdl-card__actions {
      height: 52px;
      padding: 16px;
      background: rgba(0, 0, 0, 0.2);
    }
    .demo-card-image__filename {
      color: #fff;
      font-size: 14px;
      font-weight: 500;
    }
    </style>
    
    <div class="demo-card-image mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand"></div>
      <div class="mdl-card__actions">
        <span class="demo-card-image__filename"><%= apartment.title %></span>
      </div>
    </div>
    <form id="frmUploader" enctype="multipart/form-data" action="/apartments/<%= apartment.id %>/photos" method="post">
      <input type="file" name="imgUploader" multiple class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect" />
      <input type="submit" name="submit" id="btnSubmit" value="Upload"  class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect" />
    </form>

    </main>
<%- include('footer') -%>
